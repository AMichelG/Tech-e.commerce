generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int @id @default(autoincrement())
  email     String @unique
  password  String
  username  String @unique
  active    Boolean @default(true)
  role      Role @default(GUEST) 
}

model Sale {
  id      Int       @id @default(autoincrement())
  total   Int
  date    DateTime
  state   Boolean
  //user    User      @relation(fields: [userId], references: [id])
  //userId  Int
}

model saleDetails {
  id Int @id @default(autoincrement())
  amount Int
  price Int
  idProduct String
  //sales Sale[]
}

enum Role {
  GUEST
  USER
  MOD
  ADMIN
}
