generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model saleDetails {
  id Int @id @default(autoincrement())
  amount Int
  price Int
  idProduct String
  // idSale Sale[]
}

enum Role {
  GUEST
  USER
  MOD
  ADMIN
}
